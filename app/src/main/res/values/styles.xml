<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>

        <item name="android:textColorSecondary">@color/color_accent</item>
        <item name="colorPrimary">@color/color_primary</item> <!-- Основной цвет -->
        <item name="colorPrimaryVariant">@color/color_primary_dark</item> <!-- Цвет который наклвдывается на цвет статус бара -->
        <item name="colorOnPrimary">@android:color/white</item> <!-- На всех тех поверхностях которые имеют colorPrimary будет писаться текст этим цветом -->
        <item name="colorSecondary">@color/color_accent</item> <!-- Стал цвет акцента -->
        <item name="colorSecondaryVariant">@color/color_accent_dark</item> <!-- Более тёмный цвет акцента -->
        <item name="colorOnSecondary">@android:color/white</item> <!-- Текстовые поля на цвете акцента -->
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">@color/color_surface</item> <!-- Цвет поверхности -->
        <item name="colorOnSurface">@color/color_on_surface</item> <!-- Текст на цвете поверхности? -->

        <item name="snackbarStyle">@style/CustomSnackbar</item>
    </style>

    <style name="ArticleBarsTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/color_gray</item>
        <item name="colorOnPrimary">@color/color_on_article_bar</item>
        <item name="colorSurface">@color/color_accent_dark</item> <!-- Фон -->
        <item name="colorControlNormal">@color/color_on_article_bar</item>
    </style>

    <style name="ArticleToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="contentInsetStartWithNavigation">@dimen/spacing_zero_0</item>
    </style>

    <style name="SearchField" parent="AppTheme">
        <item name="colorPrimary">@color/color_accent_dark</item>
        <item name="colorOnPrimary">@color/color_on_article_bar</item>
    </style>


    <style name="BottombarIcon">
        <item name="android:layout_width">@dimen/bottom_bar_icon_size_56</item>
        <item name="android:layout_height">@dimen/bottom_bar_icon_size_56</item>
        <item name="android:padding">@dimen/spacing_normal_16</item>
        <item name="android:tint">@color/tint_color</item>
        <item name="android:background">@drawable/ripple</item>
    </style>

    <style name="BottombarSearchIcon" parent="BottombarIcon">
        <item name="tint">@color/tint_search_color</item>
    </style>

    <style name="CustomSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="layout_insetEdge">bottom</item>
    </style>

</resources>
